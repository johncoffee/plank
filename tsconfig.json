{
  "compilerOptions": {
    "module": "none",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "allowUnreachableCode": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noEmitHelpers": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "sourceMap": false,
    "pretty": true,
    "noEmitOnError": false,
    "alwaysStrict": true
  },
  "exclude": [
    "./node_modules",
    "./plank",
    "./build",
    "./docs"
  ]
}
